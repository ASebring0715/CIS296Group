@model IEnumerable<SportsPro.Models.Product>
@{
    ViewData["Title"] = "Product Manager";
}

<h2>Product Manager</h2>

<a asp-controller="Product" asp-action="Add">Add New Products</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Yearly Price</th>
            <th>Release Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.Name</td>
                <td>@product.YearlyPrice</td>
                <td>@product.ReleaseDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
